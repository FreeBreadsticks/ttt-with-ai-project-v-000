#!/usr/bin/env ruby

require_relative '../config/environment'
include Players

puts "Welcome to Tic Tac Toe!"
puts "How many players are there? Enter 0, 1, or 2"
input = gets.strip
if input == "0"
  game = Game.new(Computer.new("X"), Computer.new("O"))
  game.play
elsif input == "1"
  puts "Player 1 is X"
  game = Game.new(Human.new("X"), Computer.new("0"))
  game.play
elsif input == "2"
  puts "Player 1 is X"
  game = Game.new
  puts "Game started"
  game.board.display
  game.play
end
